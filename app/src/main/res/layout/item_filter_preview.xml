<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent_color">

    <ImageView
        android:id="@+id/filter_cont"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/transparent_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/filter_box"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/filter_selected"
        android:padding="4dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@id/filter_cont"
        app:layout_constraintEnd_toEndOf="@id/filter_cont"
        app:layout_constraintTop_toTopOf="@id/filter_cont"/>

    <TextView
        android:id="@+id/filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="filter name"
        android:gravity="center"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeMaxTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        android:maxLines="1"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="@id/filter_cont"
        app:layout_constraintEnd_toEndOf="@id/filter_cont"
        app:layout_constraintBottom_toBottomOf="@id/filter_cont"
        app:layout_constraintTop_toBottomOf="@id/filter_box"/>

</androidx.constraintlayout.widget.ConstraintLayout>