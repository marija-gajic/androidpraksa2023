<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLeft_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineRight_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLogoTop_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.22"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineButtonTop_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>

        <ImageView
            android:id="@+id/imgLogo_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/logo"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guidelineLogoTop_main"/>

        <TextView
            android:id="@+id/btn_start_main"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_start"
            android:text="@string/btn_start_text"
            android:textColor="@color/white_color"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="19dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toBottomOf="@id/guidelineButtonTop_main"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft_main"
            app:layout_constraintEnd_toStartOf="@id/guidelineRight_main"/>

        <TextView
            android:id="@+id/btn_signIn_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/btn_sign_in_text"
            android:textColor="@color/icon_text"
            android:background="@drawable/btn_sign_in"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="@id/guidelineLeft_main"
            app:layout_constraintEnd_toStartOf="@id/guidelineRight_main"
            app:layout_constraintTop_toBottomOf="@id/btn_start_main"/>

        <ImageView
            android:id="@+id/header_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/header_footer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"/>

        <ImageView
            android:id="@+id/footer_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"/>

</androidx.constraintlayout.widget.ConstraintLayout>